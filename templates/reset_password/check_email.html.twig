{% extends 'base.html.twig' %}

{% block title %}{% trans %}Password reset email send{% endtrans %}{% endblock %}

{% block body %}
    <div class="container m-auto">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-xl-10">
                <div class="card rounded-3 card-security" >
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-flex  justify-content-center
                        align-items-center">
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5">

                                <h3 class="fw-normal mb-3 pb-3 text-black"
                                    style="letter-spacing: 1px;">{{ block('title') }}</h3>

                                <p class="text-black">
                                    {% trans %}If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password. This link will expire in{% endtrans %}
                                    {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                                </p>
                                <p class="text-black">{% trans %}If you don't receive an email please check your spam folder or{% endtrans %}
                                    <a href="{{ path('app_forgot_password_request') }}" class="text-black"> {% trans %}try again{% endtrans %}</a>.
                                </p>
                                <a href="{{ path('app_login') }}" class="small text-black">
                                    {% trans %}Sign in{% endtrans %} ?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
