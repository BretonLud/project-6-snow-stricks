{{ form_start(form) }}
{{ form_errors(form) }}
<div class="form-floating">
	{{ form_widget(form.content) }}
	{{ form_label(form.content) }}
	{{ form_errors(form.content) }}
</div>
<div class="d-flex justify-content-end mt-3">
	<button class="btn {{ (button_label is defined) ? 'btn-outline-light' : 'btn-primary' }}" type="submit">{{ button_label|default('Edit')|trans }}</button>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
